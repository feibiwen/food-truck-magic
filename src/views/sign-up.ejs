<% layout('boilerplate') %>

<% script('/js/sign-up.js') %>
<% stylesheet('/styles/sign-up.css') %>

<h2>Sign up</h2>

<form method="post" action="/sign-up" id="sign-up">

    <div class="form-item">
        <label for="signup_email">Email</label>
        <input id="signup_email" type="text" name="email" />
        <%if(noEmail) { %>
            <div class="error">
                You must provide an email address.
            </div>
        <% }%>
        <%if(badEmail) { %>
            <div class="error">
                <code class="email"><%= enteredEmail %></code> is not a valid email address.
            </div>
        <% }%>
    </div>

    <div class="form-item username-form-item">
        <label for="signup_username">Username</label>
        <input id="signup_username" type="text" name="name" />
        <%if(noUsername) { %>
            <div class="error">
                You must provide a username.
            </div>
        <% }%>
        <%if(usernameTaken) { %>
            <div class="error" id="username-error"<%if(!usernameTaken) { %> style="display: none;"<% }%>>
                The username '<span class="username"><%= enteredUsername %></span>' is already taken. 
            </div>
        <% }%>
    </div>

    <div class="form-item">
        <label for="signup_pass">Password</label>
        <input id="signup_pass" type="password" name="pass" />
        <%if(noPassword) { %>
            <div class="error">
                You must provide a password.
            </div>
        <% }%>
    </div>

    <input type="submit" value="Sign up" />
</form>

