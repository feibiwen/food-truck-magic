<% layout('boilerplate') %>

<% block('metas', "<meta name='following' content='" + following + "'>") %>
<% block('metas', "<meta name='truckid' content='" + truck.id + "'>") %>
<% if (user) { %>
    <% block('metas', "<meta name='userid' content='" + user.id + "'>") %>
<% } %>
<% script('/js/truck.js') %>
<% stylesheet('/styles/truck.css') %>

<h2><%= truck.name %></h2>

<div id="truck-data">
    <%if(truck.phone) { %>
        <span class="data-item phone">
            Phone: <a href="tel:<%= truck.phone %>"><%= truck.phone %></a>
        </span>
    <% }%>
    <%if(truck.website) { %>
        <span class="data-item website">
            Website: <a href="<%= truck.website %>" class="truck-website"><%= truck.website %></a>
        </span>
    <% }%>

    <% if (user) { %>
        <button type="button" id="follow" style="display:none;"></button>
    <% } else { %>
        <span> (Log in to follow this truck) </span>
    <% } %>
</div>
